{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useSelfClosingElements": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
