    {
      "path": "dist/standard-schema.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.2",
    "arktype": "^1.0.29-alpha",
    "husky": "^9.0.11",
    "size-limit": "^11.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "@biomejs/biome": "^1.6.4"
